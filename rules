#!/usr/bin/make -f
#-*- makefile -*-

# Uncomment this to turn on verbose mode.
#export DH_VERBOSE=1

export CXXFLAGS=-fPIC
export CFLAGS=-fPIC

CMAKE_FLAGS = \
	-DUSE_FFTW3=ON \
	-DBUILD_TESTING=OFF \
	-DDATA_DIR=/usr/share/casacore/data \
	-DUSE_OPENMP=ON \
	-DBUILD_SHARED_LIBS=0 \
	-DUSE_HDF5=OFF

%:
	dh $@ --buildsystem=cmake --parallel

override_dh_auto_configure:
	dh_auto_configure -- $(CMAKE_FLAGS)

override_dh_clean:
	rm -rf doc/
	dh_clean

